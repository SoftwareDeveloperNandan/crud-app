<%-include('partials/header.ejs')%>
    <!-- content -->
    <main class="py-5">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header card-title">
                <strong>Add New Contact</strong>
              </div>
              <% if(errors?.server) {%>
                <div class="alert alert-danger"> <%= errors.server.msg %></div>
              <% } %>
              <!-- form section start -->
              <form action="/add-contact" method="post">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-12">
                      
                      <div class="form-group row">
                        <label for="firstname" class="col-md-3 col-form-label">First Name</label>
                        <div class="col-md-9">
                          <input type="text" name="firstname" id="firstname" value="<%= formData?.firstname || '' %>" class="form-control">

                          <% if(errors?.firstname && errors) { %>
                            <span class="text-danger"><%= errors.firstname.msg %></span>
                          <% } %>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="lastname" class="col-md-3 col-form-label">Last Name</label>
                        <div class="col-md-9">
                          <input type="text" name="lastname" id="lastname" value="<%= formData?.lastname || '' %>" class="form-control">

                          <% if(errors?.lastname && errors) { %>
                            <span class="text-danger"><%= errors.lastname.msg %></span>
                          <% } %>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="email" class="col-md-3 col-form-label">Email</label>
                        <div class="col-md-9">
                          <input type="text" name="email" id="email" value="<%= formData?.email || '' %>" class="form-control">

                          <% if(errors?.email && errors) { %>
                            <span class="text-danger"><%= errors.email.msg %></span>
                          <% } %>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="phone" class="col-md-3 col-form-label">Phone</label>
                        <div class="col-md-9">
                          <input type="text" name="phone" id="phone" value="<%= formData?.phone || '' %>" class="form-control">

                          <% if(errors?.phone && errors) { %>
                            <span class="text-danger"><%= errors.phone.msg %></span>
                          <% } %>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="name" class="col-md-3 col-form-label">Address</label>
                        <div class="col-md-9">
                          <textarea name="address" id="address" rows="3" class="form-control"><%= formData?.address || '' %></textarea>

                          <% if(errors?.address && errors) { %>
                            <span class="text-danger"><%= errors.address.msg %></span>
                          <% } %>
                        </div>
                      </div>
                      <hr>
                      <div class="form-group row mb-0">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="/" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
<%-include('partials/footer.ejs')%>